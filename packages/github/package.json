{
  "name": "@ctx/github-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./lib": {
      "import": "./dist/lib/index.js"
    }
  },
  "bin": {
    "github-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --packages=external --outfile=dist/index.js && esbuild src/lib/index.ts --bundle --platform=node --target=node22 --format=esm --packages=external --outfile=dist/lib/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ctx/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "adm-zip": "^0.5.16",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
